{% extends 'medewerker.html.twig' %}

{% block menu %}
    <li><a href="{{ path('activiteitenoverzicht') }}">home</a></li>
    <li class="active"><a href="{{ path('beheer') }}"><span class="badge">{{ activiteiten|length }}</span>beheer</a></li>
    <li><a href="{{ path('user_index') }}"><span class="badge"></span>beheer users</a></li>
{% endblock %}
{% block body %}
        <section>
            <table class="table" style="table-layout: fixed">
                <caption>Dit zijn alle soort activiteiten van het kartcentrum</caption>
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Naam</th>
                            <th>MinLeeftijd</th>
                            <th>Tijdsduur</th>
                            <th>Prijs</th>
                            <th>bewerken</th>
                            <th>bekijken</th>
                            <th>verwijderen</th>
                        </tr>
                    </thead>
                <tbody>
                {% for soortactiviteit in soortactiviteits %}
                    <tr>
                        <td>{{ soortactiviteit.id }}</td>
                        <td>{{ soortactiviteit.naam }}</td>
                        <td>{{ soortactiviteit.minLeeftijd }}</td>
                        <td>{{ soortactiviteit.tijdsduur }}</td>
                        <td>{{ soortactiviteit.prijs }}</td>
                        <td title="bewerk de gegevens van deze soortactiviteit">


                            <a href="{{ path('soortactiviteit_edit', {'id': soortactiviteit.id}) }}" >
                                <span class="glyphicon glyphicon-pencil" style="color:red"></span>
                            </a>
                        </td>
                        <td title="bekijk de gegevens van deze soortactiviteit">


                            <a href="{{ path('soortactiviteit_show', {'id': soortactiviteit.id}) }}" >
                                <span class="glyphicon glyphicon-pencil" style="color:red"></span>
                            </a>
                        </td>
                        <td title="verwijder deze activiteit is definitief">
                            <a href="{{ path('soortactiviteit_delete', {'id':soortactiviteit.id}) }}" >
                                <span class="glyphicon glyphicon-minus" style="color:red"></span>
                            </a>
                        </td>
                    </tr>
                {% endfor %}
                <tr>
                    <td colspan="6">
                        <a href="{{ path('soortactiviteit_new') }}"> <button class="btn-success">Soort activiteit toevoegen</button></a>
                    </td>

                </tr>

                </tbody>

            </table>

            <a href="{{ path('add') }}">Activiteiten toevoegen</a>
        </section>

{% endblock %}
