{% extends "deelnemer.html.twig" %}

{% block menu %}
    <li><a href="{{ path('activiteitenoverzicht') }}">home</a></li>

{% endblock %}
{% block body %}
<section >
    <table class="table table-bordered" style="table-layout: fixed">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>Username</th>
                <td>{{ user.username }}</td>
            </tr>
            <tr>
                <th>Password</th>
                <td>{{ user.password }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>

            <tr>
                <th>Voorletters</th>
                <td>{{ user.voorletters }}</td>
            </tr>
            <tr>
                <th>Tussenvoegsel</th>
                <td>{{ user.tussenvoegsel }}</td>
            </tr>
            <tr>
                <th>Achternaam</th>
                <td>{{ user.achternaam }}</td>
            </tr>
            <tr>
                <th>Adres</th>
                <td>{{ user.adres }}</td>
            </tr>
            <tr>
                <th>Postcode</th>
                <td>{{ user.postcode }}</td>
            </tr>
            <tr>
                <th>Woonplaats</th>
                <td>{{ user.woonplaats }}</td>
            </tr>
            <tr>
                <th>Telefoon</th>
                <td>{{ user.telefoon }}</td>
            </tr>
        </tbody>
    </table>
</section>

    {% if is_granted('ROLE_USER') %}
    <button class="btn-success"><a href="{{ path('user_edit', {'id': app.user.id}) }}">Bewerken</a></button>
    {% endif %}

    {{ include('user/_delete_form.html.twig') }}
{% endblock %}
